{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "g++",
            "type": "shell",
            "args": [
                "-g",
                "-std=c++11",
                "main.cpp"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "buildTest",
            "command": "make",
            "type": "shell",
            "args": [
                "clean",
                "ns_test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}